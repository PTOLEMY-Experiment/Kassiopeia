
<geometry>

	<cylinder_space name="cylinder_space" z1="-0.1" z2="0.1" r="0.15"/>

	<tag name="shape_tag">

<!-- top -->
		<!-- center plate -->
		<flattened_poly_loop_surface name="tcenter_plate_shape" z="-0.01" flattened_mesh_count="100" flattened_mesh_power="1.">
			<poly_loop>
				<start_point x="{-(7.5)/100}" y="{(3.0)/100}"/>
				<next_line x="{(7.5)/100}" y="{(3.0)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{(7.5)/100}" y="{-(3.0)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{-(7.5)/100}" y="{-(3.0)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<last_line line_mesh_count="100" line_mesh_power="1."/> 
			</poly_loop>
		</flattened_poly_loop_surface>

<!-- bottom -->
		<!-- center plate -->
		<flattened_poly_loop_surface name="bcenter_plate_shape" z="0.01" flattened_mesh_count="100" flattened_mesh_power="1.">
			<poly_loop>
				<start_point x="{-(7.5)/100}" y="{(3.0)/100}"/>
				<next_line x="{(7.5)/100}" y="{(3.0)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{(7.5)/100}" y="{-(3.0)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{-(7.5)/100}" y="{-(3.0)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<last_line line_mesh_count="100" line_mesh_power="1."/> 
			</poly_loop>
		</flattened_poly_loop_surface>

<!-- bottle plates -->
		<flattened_poly_loop_surface name="tbottle_plate_shape" z="{-(3.0)/100}" flattened_mesh_count="100" flattened_mesh_power="1.">
			<poly_loop>
				<start_point x="{-(7.5)/100}" y="{0.01-(0.1)/100}"/>
				<next_line x="{(7.5)/100}" y="{0.01-(0.1)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{(7.5)/100}" y="{-0.01+(0.1)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{-(7.5)/100}" y="{-0.01+(0.1)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<last_line line_mesh_count="100" line_mesh_power="1."/> 
			</poly_loop>
		</flattened_poly_loop_surface>

		<flattened_poly_loop_surface name="bbottle_plate_shape" z="{(3.0)/100}" flattened_mesh_count="100" flattened_mesh_power="1.">
			<poly_loop>
				<start_point x="{-(7.5)/100}" y="{0.01-(0.1)/100}"/>
				<next_line x="{(7.5)/100}" y="{0.01-(0.1)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{(7.5)/100}" y="{-0.01+(0.1)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<next_line x="{-(7.5)/100}" y="{-0.01+(0.1)/100}" line_mesh_count="100" line_mesh_power="1."/>
				<last_line line_mesh_count="100" line_mesh_power="1."/> 
			</poly_loop>
		</flattened_poly_loop_surface>

<!-- fence -->
		<extruded_circle_surface name="fence_shape" zmin="-0.1" zmax="0.1" extruded_mesh_count="100" extruded_mesh_power="1">
			<circle x="0." y="0." radius="0.15" circle_mesh_count="128"/>
		</extruded_circle_surface>

	</tag>


	<!-- assembly -->

	<space name="fence_assembly">
		<tag name="fence_tag">
			<surface name="fence_surface" node="fence_shape"/>
		</tag>
	</space>

	<space name="electrode_assembly">
		<tag name="tcenter_plate">
			<surface name="tcenter_plate_surface" node="tcenter_plate_shape"/>
		</tag>
		<tag name="bcenter_plate">
			<surface name="bcenter_plate_surface" node="bcenter_plate_shape"/>
		</tag>
	</space>

	<space name="bottle_assembly">
		<tag name="tbottle_plate">
			<surface name="tbottle_plate_surface" node="tbottle_plate_shape"/>
		</tag>
		<tag name="bbottle_plate">
			<surface name="bbottle_plate_surface" node="bbottle_plate_shape"/>
		</tag>
	</space>

	<space name="world" node="cylinder_space">
		<space name="fence_space" tree="fence_assembly"/>
		<space name="main_space">
			<space name="bottle_space" tree="bottle_assembly">
				<transformation rotation_euler="90. 0. 0."/>
			</space>
			<space name="electrode_space" tree="electrode_assembly">
				<transformation rotation_euler="90. 90. 0."/>
			</space>
		</space>
	</space>

	<appearance name="app_electrode" color="  0   0 255 127" arc="72" surfaces="world/main_space/electrode_space/@tcenter_plate"/>
	<appearance name="app_electrode" color="123 123 255 127" arc="72" surfaces="world/main_space/electrode_space/@bcenter_plate"/>

</geometry>

