{
    "processor-toolbox":
    {
        "processors":
        [
            { "type": "egg-processor",          "name": "egg1" },
            { "type": "forward-fftw",           "name": "fft1" },
            { "type": "convert-to-power",       "name": "ps"   },
            { "type": "root-spectrogram-writer", "name":"waterfall-writer" },
            { "type": "basic-root-writer",   "name": "writer" }



        ],
        
        "connections":
        [
            {
                "signal": "egg1:header",
                "slot": "fft1:header",
                "order": 0
            },

            {
                "signal": "egg1:ts",
                "slot": "fft1:ts-fftw"
            },

            {
                "signal": "fft1:fft",
                "slot": "ps:fs-fftw-to-psd"
            },
            
            {
                "signal": "ps:psd",
                "slot": "writer:psd"
            },

            {
                "signal": "fft1:fft",
                "slot": "writer:fs-fftw-phase"
            },
                                
            {
                "signal": "ps:psd",
                "slot": "waterfall-writer:psd"
            },
            {
                "signal": "egg1:egg-done",
                "slot": "waterfall-writer:write-file"
            }
         
        ],
        
        "run-queue":
        [
            "egg1"
        ]
    },
        
    "egg1":
    {
        "filename": "/tigress/wonyongc/ptolemy/configs/pinhead/locust_pinhead.egg",
        "egg-reader": "egg3",
        "number-of-slices": 50,
        "slice-size": 8192,
        "stride": 8192,
        "dac":
        {
            "time-series-type": "fftw"
        }

    },



    "fft1":
    {
        "transform-flag": "ESTIMATE"
    },


    "waterfall-writer":
    {
        "output-file": "/tigress/wonyongc/ptolemy/configs/pinhead/pinhead_waterfall.root",
        "file-flag": "recreate",
        "min-time": 0.0,
        "max-time": 0.025,
        "min-freq": 0.0e6,
        "max-freq": 200.0e6
    },



    "writer":
    {
        "output-file": "/tigress/wonyongc/ptolemy/configs/pinhead/pinhead_basic.root",
        "file-flag": "recreate"
    }


}

